<div class="new_style">
  <div class="new_header"></div>
  <div class="new_hero">
    <%= form_with model: @question, local: true  do |form| %>
      <div class="new_title"><%= form.text_field :title, placeholder: "タイトル" %></div>
      <div class="new_text"><%= form.text_area :text, placeholder: "質問内容", rows: "2" %></div>
      <div class="new_name"><%= form.text_field :name, placeholder: "投稿者名" %></div>
      <div class="new_submit"><%= form.submit "POST" %></div>
    <% end %>
  </div>
</div>